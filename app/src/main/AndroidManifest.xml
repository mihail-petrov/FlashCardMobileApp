<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mentormateacademy.flashcardmobileclient">

    <application
        android:name=".database.seeder.DatabaseSeeder"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.DeckListActivity"></activity>
        <activity
            android:name=".ui.activities.NewDeckActivity"
            android:label="NewDeck"></activity>
        <activity
            android:name=".ui.activities.CardListActivity"
            android:label="CardList"></activity>

        <activity android:name=".ui.activities.ShowCardsFromDeckActivity">

        </activity>
    </application>

</manifest>
