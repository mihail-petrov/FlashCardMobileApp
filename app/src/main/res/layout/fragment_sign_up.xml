<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/signUpLinearLayout">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sign_up_edit_text_top_margin"
        android:hint="@string/username_hint"
        android:textSize="@dimen/large_text_size"
        android:id="@+id/usernameSignUpEditText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sign_up_edit_text_top_margin"
        android:inputType="textPassword"
        android:textSize="@dimen/large_text_size"
        android:hint="@string/password_hint"
        android:id="@+id/passwordSignUpEditText"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sign_up_edit_text_top_margin"
        android:inputType="textPassword"
        android:textSize="@dimen/large_text_size"
        android:hint="@string/confirm_password_hint"
        android:id="@+id/confirmPasswordSignUpEditText"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sign_up_button_sign_up_top_margin"
        android:layout_marginRight="@dimen/buttons_left_right_margin"
        android:layout_marginLeft="@dimen/buttons_left_right_margin"
        android:textSize="@dimen/large_text_size"
        android:text="@string/sign_up_button_text"
        android:id="@+id/signUpButton"
        android:layout_gravity="center_horizontal" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/log_in_button_text"
        android:id="@+id/logInButton"
        android:layout_marginTop="@dimen/sign_up_button_log_in_top_margin"
        android:layout_marginRight="@dimen/buttons_left_right_margin"
        android:layout_marginLeft="@dimen/buttons_left_right_margin"
        android:textSize="@dimen/small_text_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />


</LinearLayout>