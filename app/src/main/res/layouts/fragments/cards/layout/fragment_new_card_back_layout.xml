<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/new_card_shape_background"
            android:orientation="vertical"
            android:paddingBottom="32dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="32dp">

            <TextView
                android:id="@+id/sampleTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"

                android:text="Card title:"
                android:textColor="@android:color/darker_gray" />

            <EditText
                android:id="@+id/newCardScreenTitleEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Card Content:"
                android:textColor="@android:color/darker_gray" />

            <com.mentormateacademy.flashcardmobileclient.component.customComponents.editText.RichEditText
                android:id="@+id/newCardContentEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:hint="Example: communication disorder, expressed by excessive wordiness with minor or sometimes incoherent talkativeness"
                android:inputType="textMultiLine"
                android:lineSpacingExtra="6dp"
                android:scrollbars="vertical" />

            <!--<EditText-->
                <!--android:id="@+id/newCardContentEditText"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="top|left"-->
                <!--android:hint="Example: communication disorder, expressed by excessive wordiness with minor or sometimes incoherent talkativeness"-->
                <!--android:inputType="textMultiLine"-->
                <!--android:lineSpacingExtra="6dp"-->
                <!--android:scrollbars="vertical" />-->

        </LinearLayout>

    </ScrollView>

</LinearLayout>
